package basic;

import java.util.Scanner;

public class basic_2443 {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		int N = sc.nextInt();
		sc.close();
			
		
		for(int i=N; i>=1; i--) {
			for(int j=1; j<=N; j++)
			{
						//자바에서는 문자 곱하기가 *로 불가능하고 .repeat으로 해야함
			System.out.println(" ".repeat(N-i)+"*".repeat(2*N-j)+" ".repeat(N-i));
			j=j+2;
			}
		}
		
	}

}